<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.CircularRevealRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSecondary"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:visibility="visible"
        android:id="@+id/layout_login_signup_not_logged"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_button"
            style="@style/Button_big_button_global"
            android:drawableLeft="@drawable/ic_person_24dp"
            android:drawablePadding="@dimen/default_small_padding"
            android:drawableStart="@drawable/ic_person_24dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_button"
            style="@style/Button_big_button_global"
            android:drawableLeft="@drawable/ic_person_add_24dp"
            android:drawablePadding="@dimen/default_small_padding"
            android:drawableStart="@drawable/ic_person_add_24dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:id="@+id/layout_login_signup_logged"
        android:visibility="gone"
        android:gravity="center"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_button"
            style="@style/Button_big_button_global"
            android:drawableLeft="@drawable/ic_person_24dp"
            android:drawablePadding="@dimen/default_small_padding"
            android:drawableStart="@drawable/ic_person_24dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logout_button"
            style="@style/Button_big_button_global"
            android:drawableLeft="@drawable/ic_person_outline_24dp"
            android:drawablePadding="@dimen/default_small_padding"
            android:drawableStart="@drawable/ic_person_outline_24dp" />

    </LinearLayout>
</com.google.android.material.circularreveal.CircularRevealRelativeLayout>