<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_vertical"
    app:cardElevation="1dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:contentPadding="15dp"
    app:cardBackgroundColor="@color/colorPrimary"
    style="@style/cardView_rounded"
    android:layout_margin="@dimen/default_medium_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="start"
        android:orientation="vertical"
        android:padding="@dimen/default_big_padding">

        <TextView
            android:layout_marginBottom="@dimen/default_medium_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_news_date"
            android:textColor="@color/colorSecondary"
            android:layout_gravity="end"/>

        <TextView
            android:layout_marginBottom="@dimen/default_medium_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_news_title"
            android:textColor="@color/colorSecondary"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_news_content"
            android:textColor="@color/colorSecondary"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>