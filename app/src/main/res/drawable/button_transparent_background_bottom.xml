<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <inset android:insetLeft="-2dp"  android:insetBottom="-1dp" android:insetRight="-1dp">
            <shape android:shape="rectangle"  >
                <stroke android:width="1dip"
                    android:color="@color/button_lateral_transparent_bckg_state_pressed" />
                <solid android:color="@color/button_lateral_transparent_bckg_state_pressed"/>
            </shape>
        </inset>
    </item>
    <item android:state_focused="true">
        <inset android:insetLeft="-2dp"  android:insetBottom="-1dp" android:insetRight="-1dp">
            <shape android:shape="rectangle"  >
                <stroke android:width="1dip" android:color="@color/button_lateral_transparent_bckg" />
            </shape>
        </inset>
    </item>
    <item >
        <inset android:insetLeft="-2dp"  android:insetBottom="-1dp" android:insetRight="-1dp">
            <shape android:shape="rectangle" >
                <stroke android:width="1dip" android:color="@color/button_lateral_transparent_bckg"/>
            </shape>
        </inset>
    </item>
</selector>