{
  "rules": {
    ".read": true,
    ".write": false,
    "events": {
      "$event_id": {
        ".read": true,
        ".write": "auth != null && (!data.exists() || data.child('users').child(auth.uid).val() === 'admin')"
      }
    },
    "ratings": {
      ".read": true,
      ".write": true
    },
    "notificationRequest": {
      ".read": true,
      ".write": true
    },
    "schedule_items": {
      ".read": true,
      ".write": true
    }
  }
}
