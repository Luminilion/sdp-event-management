      "$event_id": {
        ".read": true,
        ".write": "auth != null && (data.child('users').child('admin').val() === auth.uid || (!data.child('users').exists() && !data.child('name').exists()))"
      }
    },
    "ratings": {
      ".read": true,
      ".write": true
    },
    "notificationRequest": {
      ".read": true,
      ".write": true
    },
    "schedule_items": {
      ".read": true,
      ".write": true
    },
    "spots": {
      ".read": true,
      ".write": true
    },
    "zones": {
      ".read": true,
      ".write": true
    }
  }
}